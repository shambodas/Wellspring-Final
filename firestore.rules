rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Mind Coin transactions subcollection
      match /mindCoinTransactions/{transactionId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        // Users cannot directly write transactions - only via Cloud Functions
        allow write: if false;
      }
    }
    
    // Orders - users can read their own orders
    match /orders/{orderId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.uid;
      // Users cannot directly write orders - only via Cloud Functions
      allow write: if false;
    }
    
    // Admin access (if needed)
    match /{document=**} {
      allow read, write: if request.auth != null && 
        request.auth.token.admin == true;
    }
  }
}
